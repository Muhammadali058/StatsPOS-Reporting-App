<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Stock.VendorStockReportFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@drawable/textbox_bg">

            <AutoCompleteTextView
                android:id="@+id/vendorTB"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Select Vendor"
                android:textColor="@color/textColor"
                android:background="@drawable/textbox_bg"
                android:padding="5dp"
                android:textSize="12sp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/dropdownBtn"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_dropdown"
                android:layout_gravity="center"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/refreshBtn"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/ic_refresh"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/totalStockValueLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Total Stock Value"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/totalStockValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0.00"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

    </RelativeLayout>

    <include layout="@layout/stock_report_helper"/>

</LinearLayout>