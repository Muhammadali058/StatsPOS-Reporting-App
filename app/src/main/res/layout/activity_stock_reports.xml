<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Reports.StockReportsActivity"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        style="@style/customTabLayout"
        app:tabTextAppearance="@style/customTabTextAppearance"
        app:tabMode="scrollable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/dateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

<!--        Date -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <EditText
                android:id="@+id/dateTB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Date"
                android:textColor="@color/textColor"
                android:background="@drawable/textbox_bg"
                android:drawableEnd="@drawable/ic_date"
                android:padding="5dp"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                android:clickable="false"
                android:focusable="false"/>

            <ImageView
                android:id="@+id/paramsBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_dropdown"
                android:layout_marginLeft="10dp"
                android:visibility="visible"/>

        </LinearLayout>

<!--        Radio Buttons -->
        <LinearLayout
            android:id="@+id/advanceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Stock At:"
                    android:textColor="@color/textColor"
                    android:textSize="10sp"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/typeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:checkedButton="@id/costRB"
                    android:gravity="left">

                    <RadioButton
                        android:id="@+id/costRB"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Cost"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:scaleX=".6"
                        android:scaleY=".6"/>

                    <RadioButton
                        android:id="@+id/retailRB"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="Retail"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:scaleX=".6"
                        android:scaleY=".6"/>

                    <RadioButton
                        android:id="@+id/wholesaleRB"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Wholesale"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:layout_weight="1"/>

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>